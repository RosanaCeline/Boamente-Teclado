<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/global_content_padding_side"
    android:orientation="vertical">

    <TextView
        style="@style/Ask.Text.Large.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Ativar permissões" />

    <ImageView
        android:id="@+id/step_state_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_permissions_wizard_state" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contacts_permission_group"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ask_for_contact_permissions_action"
            style="@style/Ask.Text.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/transparent_click_feedback_background"
            android:drawablePadding="6dp"
            android:padding="4dp"
            android:text="Permitir sugestão de palavras baseada no nome de seus contatos"
            app:drawableTopCompat="@drawable/ic_contacts_perm_required" />

        <TextView
            style="@style/Ask.Text.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="O AnySoftKeyboard usará os nomes dos seus contatos para fornecer sugestões personalizadas de palavras: ao digitar uma palavra, são procuradas palavras semelhantes para completar e corrigir automaticamente a digitação." />

        <TextView
            android:id="@+id/open_permissions_wiki_action"
            style="@style/Ask.Text.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/transparent_click_feedback_background"
            android:padding="4dp"
            android:text="Ler mais sobre permissões..." />

        <TextView
            android:id="@+id/disable_contacts_dictionary"
            style="@style/Ask.Text.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/transparent_click_feedback_background"
            android:padding="4dp"
            android:text="Desativar o dicionário de contato" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/notification_permission_group">
        <TextView
            android:id="@+id/ask_for_notification_permissions_action"
            style="@style/Ask.Text.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/transparent_click_feedback_background"
            android:drawablePadding="6dp"
            android:padding="4dp"
            android:text="Permitir notificações do AnySoftKeyboard"
            app:drawableTopCompat="@drawable/ic_notification_perm_required" />

        <TextView
            style="@style/Ask.Text.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Em casos raros (por exemplo, falhas na aplicação) precisaremos publicar uma notificação do dispositivo. Isto é recomendado mas a desativação da notificação não afetará o comportamento desta aplicação." />

        <TextView
            android:id="@+id/skip_notification_permissions_action"
            style="@style/Ask.Text.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/transparent_click_feedback_background"
            android:drawablePadding="6dp"
            android:padding="4dp"
            android:text="Não permitir notificações"/>

    </LinearLayout>
</LinearLayout>
