<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/global_content_padding_side"
    android:orientation="vertical">

    <TextView
        style="@style/Ask.Text.Large.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Trocar para o AnySoftKeyboard versão Boamente" />

    <ImageView
        android:id="@+id/step_state_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_wizard_switch_off" />


    <TextView
        android:id="@+id/go_to_switch_keyboard_action"
        style="@style/Ask.Text.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/transparent_click_feedback_background"
        android:drawableLeft="@drawable/ic_user_interface_category"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_user_interface_category"
        android:padding="4dp"
        android:text="Trocar teclado ativo" />

    <TextView
        style="@style/Ask.Text.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Agora o AnySoftKeyboard está disponível no seu aparelho, no entanto ele não está ativado. Ao ativar o AnySoftKeyboard se tornará seu novo teclado, junto com todas as suas funcionalidades!" />

    <TextView
        android:id="@+id/skip_setup_wizard"
        style="@style/Ask.Text.Link.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="24dp"
        android:background="@drawable/transparent_click_feedback_background"
        android:text="Ignorar" />

</LinearLayout>
